{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "run C++ output",
      "type": "shell",
      "osx": {
        "command": "/usr/bin/clang"
      },
      "windows": {
        "command": "C:\\MinGW\\bin\\gcc.exe"
      },
      "args": [
        "-g",
        "${file}",
        "-std=c17",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}.out"
      ]
    }
  ]
}
